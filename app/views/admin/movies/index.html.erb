<h1>管理者ページ一覧</h1>

<%= render 'layouts/flash_message' %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>公開年</th>
      <th>概要</th>
      <th>画像URL</th>
      <th>上映</th>
      <th>登録日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <% @movie.each do |mv| %>
      <tr>
      　<td> <td><%= link_to("#{mv.id}","/admin/movies/#{mv.id}/edit") %></td>
        <td><%= mv.name %></td>
        <td><%= mv.year %></td>
        <td><%= mv.description %></td>
        <td><%= link_to("画像",mv.image_url) %> </td>
        <td>
        <% if mv.is_showing == true %>
            上映中
        <% else %>
            上映予定
        <% end %>
        </td>
        <td><%= mv.created_at %></td>
        <td><%= mv.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>